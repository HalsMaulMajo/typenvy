{
  "name": "typenvy",
  "version": "1.2.1",
  "description": "A simple cmd parser framework for node js/ts cli apps.",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --ext '*.ts' -w ${PWD}/src -x 'npm run compile; npm run start'",
    "start-watch": "nodemon -w ./resources -x 'npm run start'",
    "compile-watch": "nodemon --ext '*.ts' -w ${PWD}/src -x 'npm run compile'",
    "start": "node dist/index.js",
    "compile": "tsc -p tsconfig.json",
    "tsnode": "ts-node src/index.ts",
    "tstest": "mocha -r ts-node/register 'src/test/**/*.test.ts'",
    "test": "npm run compile; mocha 'dist/test/**/*.test.js'",
    "testi": "npm up -g npm@latest; npm i; npm run test",
    "release": "npm up -g npm@latest; npm up; npm run compile; npm run test; npm publish"
  },
  "keywords": [
    "cli",
    "cmd",
    "arg",
    "command"
  ],
  "author": "HalsMaulMajo",
  "license": "MIT",
  "private": false,
  "devDependencies": {
    "@types/chai": "^4",
    "@types/mocha": "^8",
    "@types/node": "^16.11.12",
    "chai": "^4",
    "mocha": "^9",
    "nodemon": "^2.0.15",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.3"
  }
}