{
  "name": "typenvy",
  "version": "1.2.4",
  "description": "A simple cmd parser framework for node js/ts cli apps.",
  "main": "dist/index.js",
  "scripts": {
    "compile": "tsc -p tsconfig.json",
    "tstest": "mocha -r ts-node/register 'src/test/**/*.test.ts'",
    "test": "mocha 'dist/test/**/*.test.js'",
    "build": "npm run compile",
    "dev": "nodemon -w \"$(pwd)/src/**/*\" -x \"npm run build; npm run test\"",
    "tsdev": "nodemon --ext \"*.ts\" -w \"$(pwd)/src/**/*\" -x \"npm run tstest\"",
    "test-watch": "nodemon -w \"$(pwd)/dist/**/*\" -x \"npm run test\"",
    "build-watch": "nodemon --ext \"*.ts\" -w \"$(pwd)/src/**/*\" -x \"npm run build\"",
    "win:dev": "nodemon -w \"./src/**/*\" -x \"npm run build & npm run test\"",
    "win:tsdev": "nodemon --ext \"*.ts\" -w \"./src/**/*\" -x \"npm run tstest\"",
    "win:test-watch": "nodemon -w \"./dist/**/*\" -x \"npm run test\"",
    "win:build-watch": "nodemon --ext \"*.ts\" -w \"./src/**/*\" -x \"npm run build\""
  },
  "keywords": [
    "cli",
    "cmd",
    "arg",
    "command"
  ],
  "author": "HalsMaulMajo",
  "license": "MIT",
  "private": false,
  "devDependencies": {
    "@types/chai": "^4",
    "@types/mocha": "^8",
    "@types/node": "^16.11.12",
    "chai": "^4",
    "mocha": "^9",
    "nodemon": "^2.0.15",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.3"
  }
}